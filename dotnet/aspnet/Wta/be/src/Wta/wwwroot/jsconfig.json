{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
